{
  "name": "jumpstart",
  "version": "0.0.2",
  "description": "A cross-platform Electron wrapper for creative coding projects.",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win portable",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder -mwl"
  },
  "author": {
    "name": "Alan Ren",
    "email": "hello@me.alan.ooo",
    "url": "https://alan.ooo"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "latest",
    "electron-builder": "^24.0.0"
  },
  "dependencies": {},
  "build": {
    "appId": "com.electron.jumpstart",
    "productName": "Jumpstart",
    "asar": true,
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "darkModeSupport": true,
      "icon": "icons/icon.png",
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.inherit.plist",
      "extendInfo": {
        "NSCameraUsageDescription": "Jumpstart needs camera access for web apps that use getUserMedia.",
        "NSMicrophoneUsageDescription": "Jumpstart needs microphone access for web apps that use getUserMedia."
      }
    },
    "win": {
      "target": [
        { "target": "nsis", "arch": ["x64", "arm64"] },
        { "target": "portable", "arch": ["x64", "arm64"] }
      ],
      "icon": "icons/icon.png"
    },
    "linux": {
      "target": [
        { "target": "AppImage", "arch": ["x64", "arm64", "armv7l"] },
        { "target": "deb", "arch": ["x64", "arm64", "armv7l"] },
        { "target": "rpm", "arch": ["x64", "arm64"] }
      ],
      "category": "Utility",
      "icon": "icons/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}